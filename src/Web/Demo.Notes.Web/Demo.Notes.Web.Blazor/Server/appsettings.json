{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Identity": {
    "Authority": "https://localhost:5001",
    "ClientId": "web-admin-ui",
    "ClientSecret": ""
  },
  "ReverseProxy": {
    // Routes tell the proxy which requests to forward
    "Routes": {
      "userApiRoute": {
        "ClusterId": "userApi",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "api/{*any}"
        }
      },
      "adminApiRoute": {
        "ClusterId": "adminApi",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "admin/{*any}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/admin" }
        ]
      }
    },
    // Clusters tell the proxy where and how to forward requests
    "Clusters": {
      "userApi": {
        "Destinations": {
          "primary": {
            "Address": "https://localhost:7274"
          }
        }
      },
      "adminApi": {
        "Destinations": {
          "primary": {
            "Address": "https://localhost:7299"
          }
        }
      }
    }
  }
}
