@using System.Security.Principal
@using System.Web
@using Microsoft.AspNetCore.Mvc.TagHelpers

<ul class="navbar-nav">
@if (User.Identity?.IsAuthenticated == true)
{
        <span class="navbar-text text-dark">Hello @User.GetDisplayName()</span>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Logout">Sign out</a>
        </li>
}
else
{
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Login" asp-route-returnUrl="@HttpUtility.UrlEncode(Context.Request.Path)">Sign in</a>
        </li>
}
</ul>
